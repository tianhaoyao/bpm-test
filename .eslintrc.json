{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "linebreak-style": ["error", "windows"]
    },
    "overrides": [
        {
          "files": ["src/*.jsx"],
          "rules": {
            "no-plusplus": "off",
            "no-mixed-operators": "off",
            "react/prop-types": "warn",
            "no-unused-vars": "warn",
            "react/jsx-props-no-spreading": "off",
            "quotes": "off",
            "no-shadow": "off",
            "react/jsx-one-expression-per-line": "off"
          }
        }
    ]
}
